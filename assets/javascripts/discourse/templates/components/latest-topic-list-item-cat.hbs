<div class='topic-cat  topic-list'>
<div class='telohome'>
  
 <div class='avacat'>
  {{#user-link user=topic.lastPoster}}
    {{avatar topic.lastPoster imageSize="large"}}
  {{/user-link}}
   
    {{topic.last_poster_username}} в {{category-link topic.category}} 
    
     ответ дан  <a href="{{topic.lastPostUrl}}" title="{{topic.bumpedAtTitle}}">{{format-date topic.bumpedAt format="tiny" noTitle="true"}}</a>
    
</div>
  
  <div class='title-t'> 
    {{raw "topic-status" topic=topic}}
    {{topic-link topic}}
    {{#if topic.featured_link}}
      {{topic-featured-link topic}}
    {{/if}}
    {{topic-post-badges newPosts=topic.totalUnread unseen=topic.unseen url=topic.lastUnreadUrl}}
  </div>
  
  {{raw "list/topic-excerpt" topic=topic}} 
  
  <div class='creator'>  
  {{discourse-tags topic mode="list"}}
  </div>
  
</div>
</div> 
